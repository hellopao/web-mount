#!/usr/bin/env node
"use strict";
var onExit = require('signal-exit');

var mount = require('../lib/index');

var yargs = require('yargs')
	.usage('$0 command')
	.command('start', 'run the web mount server')
	.command('reset', 'stop the web mount server')
	
var argv = yargs.argv;
var command = argv._[0] || "start";

if (command === "start") {
	argv = yargs.reset()
		.options({
			'h': {
				alias: 'host',
				demand: true,
				type: 'string',
				describe: 'the host of your website'
			},
			'p': {
				alias: 'port',
				demand: false,
				type: 'string',
				default: "80",
				describe: 'the port of your website'
			},
			'r': {
				alias: 'root',
				demand: false,
				type: 'string',
				default: "./",
				describe: 'the root of your website'
			}
		})
		.argv
} else if (command === "reset"){

} else {
	yargs.showHelp();
}

if (command === "reset") {
	mount.resetProxy();
} else {
	mount.setProxy(argv);
}

var readline = require('readline');
var rl = readline.createInterface({
  input: process.stdin,
  output: process.stdout
});

rl.on('SIGINT', function() {
	mount.resetProxy();
	process.exit();
});
